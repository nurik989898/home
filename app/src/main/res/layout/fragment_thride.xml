<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ThrideFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_view_jacob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jacob_w"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingVertical="24dp"/>
    <ImageView
        android:id="@+id/jacob_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@id/jacob_post"
        android:src="@drawable/boy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/jacob_west"
        app:layout_constraintTop_toBottomOf="@id/text_view_jacob"
        />
    <TextView
        android:id="@+id/jacob_post"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="  54 Posts"
       android:paddingTop="18dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text_view_jacob"
        app:layout_constraintStart_toEndOf="@id/jacob_image"
        app:layout_constraintEnd_toStartOf="@id/jacob_follower"/>
    <TextView
        android:id="@+id/jacob_follower"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="     834     Followers"
        android:textColor="@color/black"
        android:paddingTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_jacob"
        app:layout_constraintStart_toEndOf="@id/jacob_post"
        app:layout_constraintEnd_toStartOf="@id/jacob_following"/>
    <TextView
        android:id="@+id/jacob_following"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="    162    Following"
        android:textColor="@color/black"
        android:paddingTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_jacob"
        app:layout_constraintStart_toEndOf="@id/jacob_follower"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/jacob_west"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Jacob West"
        android:textStyle="bold"
        android:paddingTop="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/jacob_post"
        app:layout_constraintTop_toBottomOf="@id/jacob_image"
        />
    <TextView
       android:id="@+id/jacob_comment"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Digital goodies designer @pixellz Everything is designed."
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@id/jacob_follower"
        app:layout_constraintTop_toBottomOf="@id/jacob_west"
        />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:text="Edit Profile"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jacob_comment" />

    <com.google.android.material.tabs.TabLayout
       android:id="@+id/tab_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35sp"
        tools:ignore="InvalidId"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pagerone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_lo"/>



</androidx.constraintlayout.widget.ConstraintLayout>